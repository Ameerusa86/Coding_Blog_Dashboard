{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(pages)/admin/categories/form/layout.jsx",
    "app/(pages)/admin/categories/form/page.jsx",
    "app/(pages)/admin/categories/page.jsx",
    "app/(pages)/admin/categories/form/context/CategoryFormContext.jsx",
    "lib/firebase/category/write.jsx",
    "lib/firebase.jsx",
    "lib/firebase/category/read.jsx",
    "lib/firebase/author/write.jsx",
    "lib/firebase/author/read.jsx",
    ".next/types/app/blogs/[blogId]/page.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}